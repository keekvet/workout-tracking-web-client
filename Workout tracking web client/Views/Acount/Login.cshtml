@model LoginModel

@{
    ViewData["title"] = "Login";
}

@section Header {}

@{await Html.RenderPartialAsync("AcountHeader"); }

<h1 class="text-center">login</h1>
<div class="text-center p-3">
    @ViewData["Message"]<br />

    <form asp-controller="acount" asp-action="login">
        <input type="text" asp-for="Name" /><br />
        <br />
        <input type="password" asp-for="Password" /><br />
        <br />
        <input type="submit" value="login" />
    </form>

</div>